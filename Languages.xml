<?xml version="1.0" encoding="UTF-8"?>

<settings>
  
  <language id="name.elliottcable.Ruby">
    <name>Ruby</name>
    
    <root-zone>sourcecode.ruby</root-zone>
    
    <detectors>
      <extension casesensitive="false">r</extension>
      <extension casesensitive="false">rb</extension>
      <extension casesensitive="false">ruby</extension>
      <extension casesensitive="false">ru</extension>
      <filename casesensitive="true">Rakefile</filename>
    </detectors>
    
    
    
  </language>
  
  <language id="name.elliottcable.ERB">
    <name>ERB</name>
    
    <root-zone>sourcecode.erb</root-zone>
    
    <detectors>
      <combo>
        <extension casesensitive="false">rhtml</extension>
        <match-content lines="2">(&lt;)(html|div|body|head|table)</match-content>
      </combo>
      <combo>
        <extension casesensitive="false">erb</extension>
        <match-content lines="2">(&lt;)(html|div|body|head|table)</match-content>
      </combo>
      <extension casesensitive="false">erb</extension>
      <extension casesensitive="false">rhtml</extension>
    </detectors>
  </language>
  
  <meta>
    <name>Ruby</name>
    <description>A sugar that fully describes the Ruby language, and provides easy methods with which to work with Ruby source code</description>
    <author>elliottcable</author>
    <identifier>name.elliottcable.Sugar.Ruby</identifier>
    <version status="preview">0</version>
    <download format="git">git://github.com/elliottcable/ruby.sugar.git</download>
    <url>http://github.com/elliottcable/ruby.sugar</url>
    <dependencies>
      <dependency id="name.elliottcable.Sugar.Regex">Regex</dependency>
    </dependencies>
  </meta>
  
</settings>
